{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"],
      "@shared/*": ["src/shared/*"],
      "@modules/*": ["src/modules/*"],
      "@prisma-generated-types": ["prisma/generated/types/index"]
    }
  },
  "include": ["src/**/*", "lib/*", "src/shared/**/*", "prisma/generated/*"],
  "exclude": ["node_modules", "dist"]
}