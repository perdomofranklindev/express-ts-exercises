generator client {
  provider      = "prisma-client-js"
  output        = "../prisma/generated/client"
  binaryTargets = ["native", "darwin", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// This is just an example about how should work the webhooks,
// in a real system you must always store the environment variables in safe places.
model EnvironmentEnv {
  id        String   @id @default(uuid())
  name      String   @unique
  secretKey String
  provider  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
